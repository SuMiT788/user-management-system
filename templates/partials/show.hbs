{{# each users}}
<tr>
    <th>ID</th>
    <td>{{@index}}</td>
</tr>
<tr>
    <th>Title</th>
    <td>{{this.title}}</td>
</tr>
<tr>
    <th>Name</th>
    <td>{{this.name}}</td>
</tr>
<tr>
    <th>Email</th>
    <td>{{this.email}}</td>
</tr>
<tr>
    <th>Password</th>
    <td>{{this.password}}</td>
</tr>
<tr>
    <th>Birthdate</th>
    <td>{{this.birthdate}}</td>
</tr>
<tr class="make-changes">
    <td>

    </td>
    <td><a href="/update_user?id={{this._id}}" class="btn border-shadow update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id={{this._id}}>
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
</tr>

{{/each}}